#logo       { margin-left: 5px; background-color: transparent; }
#statusBar  { margin-left: 5px; color: #777; background-color: transparent; font-size: 14px; }
#support    { color: #777; background-color: transparent; font-size: 14px; }
#support:hover  { background-color: rgba(0,0,0,.10); }
#label_navigator{ background-color: #fff; color: #333; margin-left: 5px; }
#label_3d_views { background-color: #fff; color: #333; margin-left: 5px; }
#label_3d_infos { background-color: #fff; color: #333; margin-left: 5px; }
#qclDepth, #qclName, #qclParts, #qclFormat, #qclAssembly { color: #fff; background-color: lightpink; border-radius: 16px; margin-left: 16px; padding-left: 8px; padding-right: 8px; }
#qclFormat { background-color: #E0C3FC; }
#qclParts  { background-color: #8EC5FC; }
#qclName   { background-color: #FBAB7E; }
#qclDepth  { background-color: #85FFBD; }
#occBack   { background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #82A6D0, stop:1 #fff); }
#divider_0, #divider_1 { background-color: #ddd; }



