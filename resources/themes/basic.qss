* { font-size: 16px; color: #333; background-color: #fff; }
QLabel      { color: #333; background-color: transparent; }
QColorLabel { color: #333; background-color: lightpink; border-radius: 4px; }
QLineEdit   { border-radius: 4px; padding-left: 8px; padding-right: 8px; border: 1px solid #ddd; }
QToolButton { qproperty-toolButtonStyle: "ToolButtonTextUnderIcon"; padding-top: 10px; }
QPushButton, QToolButton { color: #333; background-color: transparent; border: none; }
QPushButton:hover, QToolButton:hover { color: #333; background-color: rgba(0,0,0,.10); }
QScrollArea { background-color: #fff; border: none; qproperty-horizontalScrollBarPolicy: ScrollBarAlwaysOff; font-size: 14px; }
QNavigator  { background-color: #fff; font-size: 14px; }
QLinearSpinner { qproperty-spinnerBackgroundRadius: 20; qproperty-spinnerColor: #E0C3FC; qproperty-spinnerRadius: 6; qproperty-spinnerDistance: 25; }
QFrame { background-color: #fff; border: none; }
QApplicationWindow { background-color: #fff; }


QScrollBar { background: transparent; }
QScrollBar:vertical { width: 8px; background: transparent; margin: 0; padding-bottom: 0; }
QScrollBar::handle:vertical { width: 8px; background: #aaa; border-radius: 4px; min-height: 20px; }
QScrollBar::handle:vertical:hover { width: 8px; background: #aaa; border-radius: 4px; min-height: 20px; }
QScrollBar::add-line:vertical { height: 0; subcontrol-position: bottom; }
QScrollBar::sub-line:vertical { height: 0; width: 8px; subcontrol-position: top; }
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical { background: #eee; }

